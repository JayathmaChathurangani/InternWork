<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:activiti="http://activiti.org/bpmn" xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" xmlns:omgdc="http://www.omg.org/spec/DD/20100524/DC" xmlns:omgdi="http://www.omg.org/spec/DD/20100524/DI" typeLanguage="http://www.w3.org/2001/XMLSchema" expressionLanguage="http://www.w3.org/1999/XPath" targetNamespace="http://www.activiti.org/test">
  <process id="myProcess" name="My process" isExecutable="true">
    <startEvent id="startevent1" name="Start"></startEvent>
    <serviceTask id="insertToDb" name="Insert Data Into Database" activiti:async="true" activiti:class="org.wso2.carbon.bpmn.extensions.rest.RESTTask" activiti:extensionId="org.wso2.developerstudio.bpmn.extensions.restTask.RESTTask">
      <extensionElements>
        <activiti:field name="serviceURL">
          <activiti:string>https://localhost:9090/databaseService/libraryRequest/insertData</activiti:string>
        </activiti:field>
        <activiti:field name="method">
          <activiti:string>POST</activiti:string>
        </activiti:field>
        <activiti:field name="input">
          <activiti:expression>{
	"libName":"${data.libName}",
	"libType":"${data.libType}",
	"libCategory":"${data.libCategory}",
	"libUseVersion":"${data.libUseVersion}",
	"libLatestVersion":"${data.libLatestVersion}",
	"libFileName":"${data.libFileName}",
	"libCompany":"${data.libCompany}",
	"libSponsored":"${data.libSponsored}",
	"libPurpose":"${data.libPurpose}",
	"libDescription":"${data.libDescription}",
	"libAlternatives":"${data.libAlternatives}",
	"libRequestBy":"${data.libRequestBy}"
}</activiti:expression>
        </activiti:field>
      </extensionElements>
    </serviceTask>
    <serviceTask id="sendMailForApproval" name="Send e-mail for approval" activiti:type="mail">
      <extensionElements>
        <activiti:field name="to">
          <activiti:expression><![CDATA[${sendToList}${data.requestBy}]]></activiti:expression>
        </activiti:field>
        <activiti:field name="from">
          <activiti:string><![CDATA[project@gmail.com]]></activiti:string>
        </activiti:field>
        <activiti:field name="subject">
          <activiti:string><![CDATA[3rd Party Library Request]]></activiti:string>
        </activiti:field>
        <activiti:field name="html">
          <activiti:expression><![CDATA[<p>
  Hi all!<br /><br />

  There is a 3rd party library request with following details. <br /><br />

  <li><b>Library Name</b>:&nbsp;${data.libName}</li>
  <li><b>Library Type</b>:&nbsp;${data.libType}</li>
  <li><b>Library Category</b>:&nbsp;${data.libCategory}</li>
  <li><b>Expected version to use</b>:&nbsp;${data.libUseVersion}</li>
  <li><b>Latest version</b>:&nbsp;${data.libLatestVersion}</li>
  <li><b>Library file name</b>:&nbsp;${data.libFileName}</li>
  <li><b>Company</b>:&nbsp;${data.libCompany}</li>
  <li><b>Sponsored by</b>:&nbsp;${(data.libSponsored)?"Yes":"No"}</li>
  <li><b>Requested by</b>:&nbsp;${data.libRequestBy}</li>
  <li><b>Purpose</b>:&nbsp;<br/><br/>&emsp;${data.libPurpose.replaceAll("\\\\\\\\n","<br/>&emsp;").replaceAll("\\\\\\\\;",";")}</li><br/>
  <li><b>Description</b>:&nbsp;<br/><br/>&emsp;${data.libDescription.replaceAll("\\\\\\\\n","<br/>&emsp;").replaceAll("\\\\\\\\;",";")}</li><br/>
  <li><b>Alternatives</b>&nbsp;<br/><br/>:&emsp;${data.libAlternatives.replaceAll("\\\\\\\\n","<br/>&emsp;").replaceAll("\\\\\\\\;",";")}</li><br/>
  

  <strong>In order to accept or reject the request please click <a href=http://localhost:8081/#/root/acceptLibrary?libraryId=${repositoryId}>here.</a></strong>

  <br/><br/>
  Thank You.
  </p>]]></activiti:expression>
        </activiti:field>
      </extensionElements>
    </serviceTask>
    <userTask id="approveOrRejectTask" name="Waiting for approval" activiti:assignee="admin"></userTask>
    <serviceTask id="updateDatabase" name="Update databse" activiti:class="org.wso2.carbon.bpmn.extensions.rest.RESTTask" activiti:extensionId="org.wso2.developerstudio.bpmn.extensions.restTask.RESTTask">
      <extensionElements>
        <activiti:field name="serviceURL">
          <activiti:string>https://localhost:9090/databaseService/library/insertData</activiti:string>
        </activiti:field>
        <activiti:field name="method">
          <activiti:string>POST</activiti:string>
        </activiti:field>
        <activiti:field name="input">
          <activiti:expression>{
	"libName":"${updateData.libName}",
	"libType":"${updateData.libType}",
	"libVersion":"${updateData.libVersion}",
	"libFileName":"${updateData.libFileName}",
	"libDescription":"${updateData.libDescription}"
}</activiti:expression>
        </activiti:field>
      </extensionElements>
    </serviceTask>
    <serviceTask id="sendApprovedAck" name="Send acknowledgement" isForCompensation="true" activiti:type="mail"></serviceTask>
    <endEvent id="endevent1" name="End"></endEvent>
    <exclusiveGateway id="exclusivegateway1" name="Exclusive Gateway"></exclusiveGateway>
    <sequenceFlow id="flow1" sourceRef="startevent1" targetRef="insertToDb"></sequenceFlow>
    <sequenceFlow id="flow2" sourceRef="insertToDb" targetRef="sendMailForApproval"></sequenceFlow>
    <sequenceFlow id="flow3" sourceRef="sendMailForApproval" targetRef="approveOrRejectTask"></sequenceFlow>
    <sequenceFlow id="flow4" sourceRef="approveOrRejectTask" targetRef="exclusivegateway1"></sequenceFlow>
    <sequenceFlow id="flow5" sourceRef="exclusivegateway1" targetRef="updateDatabase"></sequenceFlow>
    <sequenceFlow id="flow7" sourceRef="updateDatabase" targetRef="sendApprovedAck"></sequenceFlow>
    <sequenceFlow id="flow8" sourceRef="sendApprovedAck" targetRef="endevent1"></sequenceFlow>
  </process>
  <bpmndi:BPMNDiagram id="BPMNDiagram_myProcess">
    <bpmndi:BPMNPlane bpmnElement="myProcess" id="BPMNPlane_myProcess">
      <bpmndi:BPMNShape bpmnElement="startevent1" id="BPMNShape_startevent1">
        <omgdc:Bounds height="35.0" width="35.0" x="20.0" y="210.0"></omgdc:Bounds>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape bpmnElement="insertToDb" id="BPMNShape_insertToDb">
        <omgdc:Bounds height="71.0" width="141.0" x="100.0" y="192.0"></omgdc:Bounds>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape bpmnElement="sendMailForApproval" id="BPMNShape_sendMailForApproval">
        <omgdc:Bounds height="69.0" width="155.0" x="280.0" y="193.0"></omgdc:Bounds>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape bpmnElement="approveOrRejectTask" id="BPMNShape_approveOrRejectTask">
        <omgdc:Bounds height="65.0" width="145.0" x="480.0" y="195.0"></omgdc:Bounds>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape bpmnElement="updateDatabase" id="BPMNShape_updateDatabase">
        <omgdc:Bounds height="65.0" width="125.0" x="790.0" y="198.0"></omgdc:Bounds>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape bpmnElement="sendApprovedAck" id="BPMNShape_sendApprovedAck">
        <omgdc:Bounds height="62.0" width="171.0" x="940.0" y="197.0"></omgdc:Bounds>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape bpmnElement="endevent1" id="BPMNShape_endevent1">
        <omgdc:Bounds height="35.0" width="35.0" x="1150.0" y="210.0"></omgdc:Bounds>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape bpmnElement="exclusivegateway1" id="BPMNShape_exclusivegateway1">
        <omgdc:Bounds height="40.0" width="40.0" x="660.0" y="210.0"></omgdc:Bounds>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNEdge bpmnElement="flow1" id="BPMNEdge_flow1">
        <omgdi:waypoint x="55.0" y="227.0"></omgdi:waypoint>
        <omgdi:waypoint x="100.0" y="227.0"></omgdi:waypoint>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="flow2" id="BPMNEdge_flow2">
        <omgdi:waypoint x="241.0" y="227.0"></omgdi:waypoint>
        <omgdi:waypoint x="280.0" y="227.0"></omgdi:waypoint>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="flow3" id="BPMNEdge_flow3">
        <omgdi:waypoint x="435.0" y="227.0"></omgdi:waypoint>
        <omgdi:waypoint x="480.0" y="227.0"></omgdi:waypoint>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="flow4" id="BPMNEdge_flow4">
        <omgdi:waypoint x="625.0" y="227.0"></omgdi:waypoint>
        <omgdi:waypoint x="660.0" y="230.0"></omgdi:waypoint>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="flow5" id="BPMNEdge_flow5">
        <omgdi:waypoint x="700.0" y="230.0"></omgdi:waypoint>
        <omgdi:waypoint x="790.0" y="230.0"></omgdi:waypoint>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="flow7" id="BPMNEdge_flow7">
        <omgdi:waypoint x="915.0" y="230.0"></omgdi:waypoint>
        <omgdi:waypoint x="940.0" y="228.0"></omgdi:waypoint>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="flow8" id="BPMNEdge_flow8">
        <omgdi:waypoint x="1111.0" y="228.0"></omgdi:waypoint>
        <omgdi:waypoint x="1150.0" y="227.0"></omgdi:waypoint>
      </bpmndi:BPMNEdge>
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
</definitions>